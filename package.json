{
  "name": "lexical-remark",
  "description": "This package contains Markdown helpers and functionality for Lexical using remark-parse.",
  "keywords": [
    "lexical",
    "editor",
    "rich-text",
    "markdown",
    "remark",
    "remark-parse"
  ],
  "scripts": {
    "build": "tsc",
    "test": "NODE_ENV=development vitest run",
    "test:preview": "vite preview --outDir html --open",
    "prepublish": "npm run build"
  },
  "license": "MIT",
  "version": "0.0.33",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "peerDependencies": {
    "@lexical/code": "0.x",
    "@lexical/link": "0.x",
    "@lexical/list": "0.x",
    "@lexical/react": "0.x",
    "@lexical/rich-text": "0.x",
    "@lexical/utils": "0.x",
    "lexical": "0.x",
    "react": "^18.2.0"
  },
  "dependencies": {
    "mdast-util-from-markdown": "^1.3.0",
    "parse5": "^7.1.2",
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.2",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "zwitch": "^2.0.4"
  },
  "devDependencies": {
    "@lexical/headless": "^0.10.0",
    "@types/react": "^18.2.6",
    "@vitest/ui": "^0.31.0",
    "jsdom": "^22.0.0",
    "mdast": "^3.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-dts": "^1.0.4",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.31.0"
  }
}
